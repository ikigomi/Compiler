@model List<Attempt>

@if (Model.Count!=0)
{
<div>
    <div class="fs-3 text-center mb-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Задание</th>
                    <th scope="col">Всего попыток</th>
                    <th scope="col">Использовано</th>
                    <th scope="col">Добавить:</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@($"{item.Kata.Name}\t({item.Kata.Language.Name}"))</td>
                        <td>@item.MaxAttempts</td>
                        <td>@item.CurrentAttempts</td>
                        <td>
                            <form method="post">
                                <input class="form-control" type="hidden" name="userId" value="@item.UserId" />
                                <input class="form-control" type="hidden" name="kataId" value="@item.KataId" />
                                <input class="form-control" type="number" name="number" min="0" step="1" value="1">
                                <button class="form-control btn btn-primary" type="submit">Добавить</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            }   
        </table>
    </div>
</div>
}
else
{
    <h3>Нет данных</h3>
}