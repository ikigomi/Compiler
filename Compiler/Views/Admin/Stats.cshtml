@model List<Attempt>

@if (Model.Count() != 0)
{
    <div>
        <div class="fs-3 text-center mb-5">
            @($"{Model.FirstOrDefault().User.FirstName} {Model.FirstOrDefault().User.LastName}\t{Model.FirstOrDefault().User.Group}\t({Model.FirstOrDefault().User.UserName})")
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Задание</th>
                        <th scope="col">Всего попыток</th>
                        <th scope="col">Использовано</th>
                        <th scope="col">Решено</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@($"{item.Kata.Name}\t({item.Kata.Language.Name}"))</td>
                            <td>@item.MaxAttempts</td>
                            <td>@item.CurrentAttempts</td>
                            @if (item.IsSolved)
                            {
                                <td class="fs-3 text-success">
                                    Да
                                </td>
                            }
                            else
                            {
                                <td class="fs-3 text-danger">
                                    Нет
                                </td>
                            }
                        </tr>   
                    </tbody>
                }
            </table>
        </div>
    </div>
}
else
{
    <h3>Нет данных</h3>
}
