<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand fs-3" asp-controller="Home" asp-action="Index">Compiler</a>


            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                @if (User.Identity.IsAuthenticated)
                {
                    <div><a class="btn btn-outline-dark" asp-controller="Account" asp-action="Logout">Выйти</a></div>
                    <div class="me-lg-3 ms-lg-3 fs-3">Hello, @User.Identity.Name</div>
                }
                else
                {
                    <a class="btn btn-outline-dark" asp-controller="Account" asp-action="Login">Войти</a>
                    <a class="btn btn-outline-dark me-lg-2" asp-controller="Account" asp-action="Register">Регистрация</a>

                }
                @if (User.HasClaim(System.Security.Claims.ClaimTypes.Role, "Administrator"))
                {
                    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Index">Admin Console</a>
                }
            </div>
        </div>
    </nav>
</header>
